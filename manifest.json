{
  "manifest_version": 2,
  "name": "Test Solver",
  "version": "1.9.3",

  "description": "This extension will solve the test for you.",

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.naurok.ua/test/testing/*", "*://*.naurok.com.ua/test/testing/*"],
      "js": ["solverNaurok.js"]
    },
    {
      "matches": ["*://*.docs.google.com/*"],
      "js": ["solverGoogle.js"]
    },
    {
      "matches": ["*://*.classtime.com/*"],
      "js": ["solverClasstime.js"]
    },
    {
      "matches": ["*://vseosvita.ua/*"],
      "js": ["solverVseosvita.js"]
    }
  ],
  "background": {
    "scripts": ["background.js", "languages.js"],
    "persistent": false,
    "type": "module"
  },
  "web_accessible_resources": ["languages.js"],
  "options_ui": {
    "page": "options.html"
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "permissions": ["storage"]
}
