{
  "manifest_version": 2,
  "name": "Test Solver",
  "version": "1.5",

  "description": "This extension will solve the test for you.",

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.naurok.ua/test/testing/*",
        "*://*.naurok.com.ua/test/testing/*"
      ],
      "js": ["solverNaurok.js"]
    },
    {
      "matches": ["*://*.docs.google.com/*"],
      "js": ["solverGoogle.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "type": "module"
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "permissions": ["storage"],
  "content_security_policy": "script-src 'self' https://esm.run https://cdn.jsdelivr.net; object-src 'self'"
}
